<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:padding="15dp"
    android:layout_marginBottom="25dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_music_note_64" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"

                android:text="Área de Seleção do Audio da Cabine."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:src="@drawable/soundimagen"/>
            />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingTop="3dp"
                android:padding="5dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Leia com Atenção"

                android:textColor="#FF0000"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="30sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />


            <TextView
                android:padding="3dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Audio que Será tocado na Cabine do Carro. Verifique se o Audio esta Correto e Inicie a Operação. "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        </LinearLayout>


        <LinearLayout
            android:padding="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_upload_audio"
                style="@style/SelectionButtonStyle"
                android:layout_margin="5dp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Baixar Audio"/>


            <Button
                android:id="@+id/btn_realese_audio"
                style="@style/SelectionButtonStyle"
                android:layout_margin="5dp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atualizar Audio"/>



            <Button

                android:id="@+id/btn_play_audio"
                style="@style/SelectionButtonStyle"
                android:layout_margin="5dp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conferir Audio"/>



            <CheckBox
                android:id="@+id/audio_cheched"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audio Conferido" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_advence"
                style="@style/SelectionButtonStyleDefault"
                android:layout_margin="5dp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Avançar >> "/>


        </LinearLayout>




    </LinearLayout>

</ScrollView>