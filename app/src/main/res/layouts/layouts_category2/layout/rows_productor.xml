<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="25sp">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_percent="0.96" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_percent="0.06" />

            <CheckBox
                android:id="@+id/chkselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Selecionar"
                android:textColor="#1E88E5"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline13"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="@+id/guideline14"
                card_view:layout_constraintTop_toBottomOf="@+id/imgPrize" />

            <ImageView
                android:id="@+id/imgPrize"

                android:layout_width="363dp"
                android:layout_height="376dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_user_2"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline13"
                card_view:layout_constraintStart_toStartOf="@+id/guideline14"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/semfoto" />


            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Celular s2 Sansung Galaxi 2364"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline13"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="@+id/guideline14"
                card_view:layout_constraintTop_toBottomOf="@+id/chkselect" />

            <TextView
                android:id="@+id/stillcoinssk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="SK$ 0,00"
                android:textAlignment="textStart"
                android:textSize="17sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline13"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="@+id/guideline14"
                card_view:layout_constraintTop_toBottomOf="@+id/txtDescription" />

            <Button
                android:id="@+id/btnpurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_states_3"
                android:text="Selecionar"
                android:visibility="gone" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>