<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Termos de Prestação de Serviço"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd" />


            <EditText

                android:id="@+id/termos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#d8d6d3"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="20"
                android:overScrollMode="always"
                android:padding="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:text="@string/termos_aceitos"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />


            <View
                android:layout_width="match_parent"
                android:layout_height="33dp" />


            <CheckBox android:id="@+id/checkbox_meat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/termos_ok"
                />


            <Button
                android:visibility="gone"
                android:id="@+id/btnadvence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_parceiro"
                android:background="@color/yellon_1"
                android:textColor="@color/black"
                android:shadowColor="#190710"
                android:theme="@style/ButtonRegister" />





















        </LinearLayout>
    </ScrollView>
</LinearLayout>
