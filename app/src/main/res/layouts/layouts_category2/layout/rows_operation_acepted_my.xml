<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/borda_arredondada_card_normal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/isOperationSoundCar"
                android:background="@color/blueone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">



            </LinearLayout>



            <TextView
                android:id="@+id/statusOperation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concluido"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="133dp"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:src="@drawable/ic_baseline_perm_contact_calendar_24" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/router_id_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="006"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="80sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/openViewPicturesOperations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ver Fotos >>" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/openViewStarOperation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ir Para Operação"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Data da Criação"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/created_id_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:padding="15dp"
                        android:text="2022-05-05 14:16:26"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Descrição da Loja"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:padding="15dp"
                        android:text="Rua Sao Carlos"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Operação "
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/operation_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/red"
                        android:padding="15dp"
                        android:text="51254"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/borda_arredondada"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:text="Loja"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/store_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:text="005"
                                android:textAlignment="center"
                                android:textSize="34sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="46dp"
                                android:lineSpacingExtra="10sp"
                                android:text="S.Rota"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="25sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/router_uuid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:text="005"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="34sp"
                                android:textStyle="italic" />


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/borda_arredondada"
                        android:padding="5dp"
                        android:text="Endereço de  Inicio "
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/addres_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="2955+VC Tuena NSW, Austrália"
                        android:textAlignment="center"
                        android:textSize="25sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/synchronizeOperation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorStatusWarning"
                        android:text="Informação da  Operação"
                        android:textColor="#000" />



                    <Button
                        android:id="@+id/openRouterInMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/blueone"
                        android:text="Ver Operação no Mapa"
                        android:textColor="#ffffff" />
                    <Button
                        android:clickable="true"
                        android:id="@+id/operationcancel"
                        android:layout_marginBottom="10dp"
                        android:background="@color/red1"
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:text="Cancelar" />

                    <Button
                        android:background="#ADFF2F"
                        android:id="@+id/confirme"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:text="Aceitar Operação " />



                    <Button
                        android:visibility="gone"
                        android:id="@+id/openrouter"
                        android:layout_marginBottom="10dp"

                        android:layout_width="match_parent"
                        android:textColor="#000"
                        android:layout_height="wrap_content"
                        android:text="Iniciar Operação" />

                    <LinearLayout
                        android:id="@+id/lnContinue"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <Button
                            android:visibility="visible"
                            android:id="@+id/openrouterFinalizar"
                            android:layout_marginBottom="10dp"

                            android:layout_width="match_parent"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:text="Finalizar Operação" />

                        <Button
                            android:visibility="visible"
                            android:id="@+id/openrouterContinuar"
                            android:layout_marginBottom="10dp"

                            android:layout_width="match_parent"
                            android:textColor="#000"
                            android:layout_height="wrap_content"
                            android:text="Continuar Operação" />



                    </LinearLayout>






                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>