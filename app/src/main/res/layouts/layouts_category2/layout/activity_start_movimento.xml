<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.stilldistribuidora.pco.ui.start_movimento">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">
        <!--app:layout_scrollFlags="scroll|enterAlways"-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_login_rtc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="3dp"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="223dp"
                        android:layout_height="125dp"
                        android:layout_weight="1"
                        android:padding="4dp"

                        android:src="@drawable/ic_time_to_leave_black_24dp" />



                    <LinearLayout
                        android:padding="18dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/seja_bem_vindo"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data Hora"
                            android:textSize="14sp" />


                        <TextView

                            android:id="@+id/str_txt_data_atual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25/10/2019 15:16"
                            android:textColor="#F44336" />

                    </LinearLayout>

                </LinearLayout>




                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="OPERAÇÂO"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <EditText

                    android:id="@+id/grf_mv_txt_st_codigo"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@color/colorStatusDanger"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="DESCRIÇÃO DO MATERIAL"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/grf_mv_txt_st_material"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@color/colorStatusDanger"
                    android:textSize="14sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="VERSÃO DO MATERIAL"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/grf_mv_txt_st_versao"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@color/colorStatusDanger"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="EMPRESA/CLIENTE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/grf_mv_txt_st_empresa_cliente"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@color/colorStatusDanger"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="QT.Á.RETIRAR"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/grf_mv_txt_st_quantidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/mdtp_button_color"
                    android:textSize="36sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/grf_mv_txt_st_a_retirar"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"

                        android:text="0"
                        android:textColor="@color/wallet_bright_foreground_holo_light"
                        android:textSize="30sp" />


                    <Button
                        android:id="@+id/grf_mv_btn_st_copy_qt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sel.Quantidade." />


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>






        </ScrollView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button

                    android:id="@+id/grf_mv_btn_st_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Iniciar.." />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>











</LinearLayout>
