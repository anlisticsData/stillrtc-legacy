<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStart" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonRegister" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">?attr/colorError</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="ButtonDefault" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#fff</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="infoAlert">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="infoContentAlert">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="BackgroundDefault">
        <item name="android:background">#F3F3F3</item>
    </style>

    <style name="TitleItem">
        <item name="android:textSize">@dimen/size_title_item</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>
</resources>